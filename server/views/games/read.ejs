<h1>Game Details</h1>
<% if (data) { %>
  <div class="card mb-4">
    <div class="card-body">
      <h2 class="card-title"><%= data.name %></h2>
      <% if (data.icon) { %>
        <img src="<%= data.icon %>" alt="icon" style="width:60px;height:60px;object-fit:cover;" class="mb-2" />
      <% } %>
      <div class="mb-2">
        <strong>Description:</strong>
        <div><%- data.description %></div>
      </div>
      <% if (data.headerImage) { %>
        <div class="mb-2">
          <strong>Header Image:</strong><br>
          <img src="<%= data.headerImage %>" alt="header" style="width:200px;height:80px;object-fit:cover;" />
        </div>
      <% } %>
      <a href="/games/<%= data.id %>/edit" class="btn btn-warning mt-3 me-2">Edit</a>
      <button 
        class="btn btn-danger mt-3 me-2" 
        hx-delete="/games/<%= data.id %>" 
        hx-confirm="Are you sure you want to delete this game?" 
        hx-target="body" 
        hx-swap="outerHTML">
        Delete
      </button>
      <a href="/games/<%= data.id %>/keys" class="btn btn-info mt-3 me-2">Manage Keys</a>
      <a href="/games" class="btn btn-secondary mt-3">Back to List</a>
    </div>
  </div>
<% } else { %>
  <div class="alert alert-danger">Game not found.</div>
<% } %>
